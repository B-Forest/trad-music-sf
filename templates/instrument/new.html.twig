{% extends 'base.html.twig' %}

{% block title %}Create an Instrument{% endblock %}

{% block body %}
    <section class="container">

        <h1>Add a new instrument</h1>

        {# Générer la balise <form> #}
        {{ form_start(form) }}

            {# Décomposer l'afffichage du formulaire #}
            <div class="form-row">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            {# Génére l'ensemble des champs du formulaire #}
            {{ form_widget(form) }}

            <button type="submit">Create</button>

        {# Générer la balise </form> #}
        {{ form_end(form) }}

        <h3>Return to Instrument's list</h3>
        <a href="{{ path('instrument_list') }}">Go back to instrument's list</a>
    </section>
{% endblock %}
