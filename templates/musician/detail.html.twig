{% extends 'base.html.twig' %}

{% block title %}
    {{ musician.fullName }}
{% endblock %}


{% block body %}
    <section class="container">
        <div style="display: flex; flex-direction: row; justify-content: space-between">
            <h1>{{ musician.fullName }}</h1>
            {% if musician.id == app.user.id %}
                <a href="#">Edit Profile</a>
            {% endif %}
        </div>
        <img src="{{ asset('uploads/' ~ musician.image) }}" alt="{{ musician.fullName}}">
        {% for instrument in musician.instruments %}
            <ul>
                <a href="{{ path('instrument_detail', { 'id' : instrument.id }) }}" class="badge badge-primary">
                    {% if instrument.icon %}
                        <i class="{{ instrument.icon }}"></i>
                    {% endif %}
                    {{ instrument.name }}
                </a>
            </ul>
        {% endfor %}

        <h3>Futur Gig :</h3>
        {# Liens vers les futurs concerts auxquelles le musiciens va participer #}
        {% for participant in musician.participants %}
            <ul>
                <li>
                    <a href="{{ path('gig_detail', { 'id' : participant.gig.id }) }}">{{ participant.gig.pub.name }} {{ participant.gig.dateStart|date('Y F l g:i a') }}</a>
                </li>
            </ul>
        {% endfor %}


    </section>
{% endblock %}



