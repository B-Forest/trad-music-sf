<article class="card">
    <a href="{{ path('musician_detail', {'id': musician.id}) }}">
        {% if musician.image %}
            <img src="{{ asset('uploads/' ~ musician.image) }}" alt="{{ musician.fullName}}">
        {% else%}
            <img src="{{ asset('uploads/noprofilepicture.jpg') }}" alt="{{ musician.fullName}}">
        {% endif %}
    </a>
    <h3>{{ musician.firstName ~ ' ' ~ musician.lastName }}</h3>
    <ul class="badge-list">
        {% for instrument in musician.instruments %}
            <li>
                <a href="{{ path('instrument_detail', { 'id' : instrument.id }) }}" class="badge badge-primary">
                    {% if instrument.icon %}
                        <i class="{{ instrument.icon }}"></i>
                    {% endif %}
                    {{ instrument.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</article>